#include<iostream>

using namespace std;

struct
{
    int st;
    int et;
}day[7];
int main(){
    int unhappy=0;
    int tt=0;
    for(int i=0;i<7;i++){
        cin>>day[i].st>>day[i].et;
        int temp=day[i].st+day[i].et;
        if(temp>8){
            if(temp>tt){
                tt=temp;
                unhappy=i+1;
            }
        }
    }
    cout<<unhappy<<endl;
    return 0;
}
