#include<bits/stdc++.h>

using namespace std;

const int MAX=100005;
int N;
int a[MAX];
long long res1,res2;
int main(){
    long mid;
    long long temp1=0;
    long long temp2=0;
    cin>>N;
    for(int i=0;i<N;i++){
        cin>>a[i];
    }
    sort(a,a+N);
    /*for(int i=0;i<N;i++){
        cout<<a[i]<<" ";
    }
    cout<<endl;*/
    if(N%2!=0){
        mid=(N-1)/2;
        res1=1;
    }else{
        mid=N/2;
        res1=0;
    }
    for(int i=0;i<mid;i++){
        temp1=temp1+a[i];
    }
    for(int i=mid;i<N;i++){
        temp2=temp2+a[i];
    }
    res2=temp2-temp1;
    cout<<res1<<" "<<res2<<endl;
    return 0;
}
