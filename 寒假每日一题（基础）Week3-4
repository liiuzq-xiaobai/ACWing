#include <iostream>
#include <cstring>
#include <algorithm>

using namespace std;

const int MAX=105;
int a[MAX]={101};
int main(){
    int i=0;
    while(cin>>a[i],a[i]!=0){
        i++;
    }
    for(int j=0;j<i;j++){
        for(int k=0;k<a[j];k++){
            int temp=k+1;
            for(int q=0;q<a[j];q++){
                //cout<<temp<<" ";
                if(temp>1){
                    cout<<temp<<" ";
                    temp=temp-1;
                }else if(temp==1){
                    cout<<temp<<" ";
                    temp=-1;
                }else{
                    temp=temp-1;
                    cout<<abs(temp)<<" ";
                }
            }
            cout<<endl;
        }
        cout<<endl;
    }
}
