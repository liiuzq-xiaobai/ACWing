#include<iostream>
#include<cstring>
#include<algorithm>

using namespace std;

const int MAX=35;
int a[MAX];
int res[MAX];
int main(){
    int i=1;
    int bonus=1;
    while(cin>>a[i]){
        switch(a[i]){
           case 1:
                res[i]=res[i-1]+1;
                bonus=1;
                i++;
                break;
            case 2:
                if(a[i-1]==1||i==1){
                    res[i]=res[i-1]+2;
                    bonus++;
                }else{
                    res[i]=res[i-1]+bonus*2;
                    bonus++;
                }
                i++;
                break;
            default:
                break; 
        }
    }
    /*for(int j=0;j<i;j++){
        cout<<res[j]<<" ";
    }*/
    cout<<res[i-1];
    return 0;
}
